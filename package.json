{
  "name": "salesorder",
  "version": "1.0.1",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@aws-sdk/client-s3": "^3.670.0",
    "@cap-js/attachments": "^1.1.7",
    "@sap-cloud-sdk/connectivity": "^3.9.0",
    "@sap-cloud-sdk/http-client": "^3.9.0",
    "@sap-cloud-sdk/resilience": "^3.9.0",
    "@sap-cloud-sdk/util": "^3.9.0",
    "@sap/approuter": "^16.9.0",
    "@sap/cds-hana": "^2",
    "@sap/cds-mtxs": "^1.9",
    "@sap/eslint-plugin-cds": "^2.6.4",
    "@sap/ux-cds-odata-language-server-extension": "^1.12.0",
    "@sap/xsenv": "^5.2.0",
    "@sap/xssec": "^3.6.1",
    "aws-cli": "^0.0.2",
    "axios": "0.27.2",
    "dotenv": "^16.3.1",
    "express": "^4",
    "formidable": "^3.5.1",
    "mbt": "^1.2.31",
    "passport": "^0.7.0",
    "querystring": "^0.2.1"
  },
  "peerDependencies": {
    "@sap/cds": "^8.4.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1.4.0",
    "@sap/cds-dk": "^8.3.0",
    "@sap/ux-specification": "^1.120.16",
    "cds-plugin-ui5": "^0.6.13",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start": "cds-serve",
    "cds": "npm i @sap/cds",
    "undeploy": "cf undeploy salesorder --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "clean": "rimraf \"**/*mta_archives\" \"**/*gen\" \"**/*resources\" \"**/*dist\" \"**/*node_modules\" \"**/*package-lock.json\"",
    "watch-salesorder": "cds watch --open salesorder/webapp/index.html?sap-ui-xx-viewCache=false",
    "all": "npm run clean && npm run cds && npm run build && npm run deploy"
  },
  "cds": {
    "fiori": {
      "lean_draft": true,
      "bypass_draft": true
    },
    "server": {
      "body_parser": {
        "limit": "1mb"
      }
    },
    "requires": {
      "attachments": {
        "scan": true
      },
      "[development]": {
        "kind": "sqlite",
        "auth": "dummy",
        "impl": "@cap-js/sqlite",
        "credentials": {
          "url": "memory"
        },
        "attachments": {
          "scan": false,
          "kind": "db"
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "[hybrid]": {
        "auth": "xsuaa",
        "db": "hana"
      },
      "BPA_WORKFLOW": {
        "kind": "rest",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "spa_process_destination"
        }
      },
      "DocumentExtraction_Dest": {
        "kind": "rest",
        "credentials": {
          "destination": "DocumentExtraction_Dest",
          "path": "/document/jobs"
        }
      },
      "API_SALES_ORDER_SRV": {
        "kind": "odata-v2",
        "csrf": true,
        "csrfInBatch": true,
        "model": "srv/external/API_SALES_ORDER_SRV",
        "credentials": {
          "destination": "S4HC_Sales",
          "path": "/sap/opu/odata/sap/API_SALES_ORDER_SRV"
        }
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "S4HC_Sales",
          "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/salesorder"
  ]
}
