<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:m="sap.ui.model" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Dialog 
        core:require="{handler: 'salesorder/ext/controller/ExtractPdf'}"
        id="pdfDialog" 
        title="PDF Viewer"
        
        class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
        afterClose="onDialogClose" draggable="true" contentHeight="600px" 
        contentWidth="600px" resizable= "true" >
        
        <content>
            <PDFViewer
                id="pdfViewer" 
                source="" 
                isTrustedSource="true"
                
                displayType="Embedded"
                height="600px"
                width="600px">
                	<layoutData>
					<FlexItemData id="_IDGenFlexItemData1" growFactor="1" />
				</layoutData>
                 </PDFViewer>

  
                 </content>
          	<endButton>
			<Button id="_IDGenButton"  
            text="Close"
             tooltip="Close"
             icon="sap-icon://cancel" 
             type="Reject" 
             press="onClose"/>
		</endButton>
    </Dialog>
</core:FragmentDefinition>